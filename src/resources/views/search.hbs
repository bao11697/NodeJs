<div class='mt-4'>
    <form method='GET'>
        <div class='form-group'>
            <label for='search-input'>Từ Khóa</label>
            <input
                type='text'
                name='q'
                class='form-control'
                id='search-input'
                placeholder='Nhập từ khóa..'
            />
            <small id='emailHelp' class='form-text text-muted'>Hãy nhập từ khóa
                mà bạn muốn tìm kiếm</small>
        </div>

        <div class='form-group'>
            <label for='gender-input'>Từ Khóa</label>
            <select name='gender' class='form-control' id='gender-input'>
                <option value=''>--Chọn giới tính--</option>
                <option value='male'>Nam</option>
                <option value='female'>Nữ</option>
            </select>

        </div>
        <button type='submit' class='btn btn-primary'>Tìm kiếm</button>
    </form>
</div>