<div class="mt-4">
   <h3>Cập Nhật Khóa Học</h3>
    <form class = "mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
            <div class="form-group">
                <label for="name" >Tên Khóa Học</label>
                <input type="text" class="form-control" value="{{course.name}}" id="name" name="name" required>
            </div>

             <div class="form-group">
                <label for="description" >Mô Tả Chi Tiết</label>
                <textarea  class="form-control"id="description" name="description"> {{course.description}}</textarea>
            </div>

             <div class="form-group">
                <label for="videoId" > ID Video</label>
                <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId" required>
            </div>

            <div class="form-group">
                <label for="level" > Trình Độ </label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="level" id="level"  value="Trình Độ Cơ Bản" {{checked course.level 'Trình Độ Cơ Bản'}}  >
                <label class="form-check-label" for="level">
                    Trình Độ Cơ Bản
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="level" id="level"  value="Trình Dộ Trung Bình" {{checked course.level 'Trình Dộ Trung Bình'}} >
                <label class="form-check-label" for="level">
                    Trình Độ Trung Bình
                </label>    
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="level" id="level" value="Trình Độ Cao" {{checked course.level 'Trình Độ Cao'}} >
                <label class="form-check-label" for="level">
                   Trình Độ Cao
                </label>    
            </div>
          
            </div>
           <button type="submit" class="btn btn-secondary">Lưu Lại</button>
    </form>

</div>